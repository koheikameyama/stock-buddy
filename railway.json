{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "watchPatterns": [
      "app/**",
      "lib/**",
      "prisma/**",
      "public/**",
      "package.json",
      "package-lock.json",
      "next.config.js",
      "tsconfig.json",
      "Dockerfile"
    ]
  }
}
