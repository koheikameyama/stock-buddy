{
  "name": "stock-buddy",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "postinstall": "prisma generate",
    "migrate:deploy": "prisma migrate deploy",
    "lint": "eslint .",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "python scripts/data/init_data.py",
    "db:sync": "bash scripts/data/sync-stocks-from-production.sh",
    "calculate-scores": "tsx scripts/github-actions/calculate-stock-scores.ts",
    "fetch-news": "tsx scripts/github-actions/fetch-market-news.ts",
    "generate-reports": "tsx scripts/generate-daily-reports.ts",
    "record-snapshots": "tsx scripts/github-actions/record-portfolio-snapshots.ts",
    "generate-coach-messages": "tsx scripts/github-actions/generate-coach-messages-direct.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@prisma/client": "^6.19.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "dayjs": "^1.11.19",
    "next": "^15.1.7",
    "next-auth": "^5.0.0-beta.30",
    "next-pwa": "^5.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.7.0",
    "typescript": "^5",
    "web-push": "^3.6.7",
    "yahoo-finance2": "^3.13.0"
  },
  "devDependencies": {
    "@types/web-push": "^3.6.4",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-next": "^15.5.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prisma": "^6.19.2",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.21.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "bash -c 'npx tsc --noEmit'"
    ]
  }
}
